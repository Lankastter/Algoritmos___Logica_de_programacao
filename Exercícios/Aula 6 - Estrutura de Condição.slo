//Cadastro de um hotel onde divide a categoria de idade entre:
// Criança, adolescente e Adulto

início {
    inteiro: idade;
    leia("Idade:", idade);
    
    caractere: categoria;
    
    se (idade < 0){
        categoria = "idade inválida";
    } senão se (idade <13){
        categoria = "Criança";
    } senão se (idade <18){
        categoria = "Adolescente";
    } senão{
        categoria = "Adulto";
    }
    
    escreva(categoria);
}